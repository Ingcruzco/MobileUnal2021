<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@android:color/system_accent2_100"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/itemUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:text="URL"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="Card 1"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemUrl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/itemEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="8dp"
            android:text="Correo"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/itemProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemEmail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="11dp"
            android:text="Productos"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/itemClasification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:text="Clasificacion"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/Editbutton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/itemName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="102dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="Editar" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/itemName"
            android:layout_marginStart="23dp"
            android:layout_marginTop="102dp"
            android:layout_toEndOf="@+id/Editbutton"
            android:backgroundTint="@color/design_default_color_error"
            android:text="Eliminar" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>